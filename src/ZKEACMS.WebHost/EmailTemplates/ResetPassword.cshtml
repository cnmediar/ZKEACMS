@model ZKEACMS.Notification.ViewModels.ResetPasswordViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Reset password</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
</head>
<body>
    <h3>
       Reset password
    </h3>
    <p>
        You can use the following link to reset your password. For security, the link will only be valid for a period of time. Please reset your password as soon as possible.
        
    </p>
    <p>
        <a href="@Model.Link">
            @Model.Link
        </a>
    </p>
  
    <p>
        <em>@DateTime.Now.ToString("yyyy-MM-dd")</em>
    </p>
</body>
</html>