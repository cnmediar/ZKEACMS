@using ZKEACMS.Shop.ViewModel
@model ReportListViewModel
@{
    Layout = Layouts.CustomerCenter;
    ViewBag.Title = "Report";
}
<div class="panel panel-default">
    <div class="panel-heading">
        Report
        <br/>
        <div id="toolBar " class="right">
            <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">Create</a>
        </div>
    </div>
    <table class="table table-striped table-hover table-response">
        <thead>
            <tr>
                <th>
                   Id
                </th>
                <th>
                    Factory Name
                </th>
                <th>
                    Factory Add
                </th>
                <th>
                    AuditStandard
                </th>
                <th>
                    AuditMethod
                </th>
                <th>
                    AuditDate
                </th>
                <th>
                    AuditType
                </th>
                <th>
                    LengthofAudit
                </th>
                <th>
                    @L("操作")
                </th>
            </tr>
        </thead>


        <tbody>
            @foreach (var item in Model.Reports)
            {
            <tr class="">
                <td head="id">
                    <a href="@Url.Action("Detail", new { Id = item.id })">@item.id</a>
                </td>
                <td head="FactoryName)">
                    @item.FactoryName
                </td>
                <td head="FactoryAdd">
                    @item.FactoryAdd
                </td>

                <td head="AuditStandard">
                    @item.AuditStandard
                </td>
                <td head=AuditMethod")">
                    @item.AuditMethod
                </td>
                <td head="AuditDate" )">
                    @item.AuditDate
                </td>
                <th>
                    @item.AuditType
                </th>
                <td head="LengthofAudit" )">
                    @item.LengthofAudit
                </td>
                <td head=" @L("操作")">

                    <a class="remove-order" href="javascript:" data-href="@Url.Action("Remove", new { Id = item.id })">@L("delete")</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
@{
    await Html.Pagin(Model.Pagin);
}
@using (Script.AtFoot())
{
    <script type="text/javascript">
        $(document).on("click", ".remove-order", function () {
            var href = $(this).data("href");
            Easy.ShowMessageBox('@L("提示")', '@L("确定删除订单吗？")', function () { window.location.href = href; }, true);
        });
    </script>

}