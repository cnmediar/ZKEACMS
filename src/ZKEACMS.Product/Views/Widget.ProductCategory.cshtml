@model ZKEACMS.Product.ViewModel.ProductCategoryWidgetViewModel

<div class="product-category hamburgermenu">
    <div class="list-group Menu">


   
    </div>
</div>


<div class="prod">
    <div class="prodbox">
        <div class="prod_left">
            <div class="box">
                @foreach (var cat in Model.BigCategorys)
                {
                 
                    <h3 class="Collapsing   @(cat.ID == Model.CurrentBigCategory ? "current" : "") "><i><img src="/themes/flyingtop/images/@cat.Description" /></i> @cat.Title</h3>
                    <div class="coll_body  " style=" @(cat.ID == Model.CurrentBigCategory? "display:block;" : "") ">
                        <ul>

                            @foreach (var item in Model.Categorys.Where(n => n.ParentID == cat.ID))
                            {
                            <li>
                                <a href="@Url.ProductCategoryUrl(item)" class="list-group-item @(item.ID == Model.CurrentCategory ? "current" : "")">
                                    @item.Title
                                </a>
                            </li>
                                }
                          
                            </ul>
</div>
                    }
                
                             

            </div>
            <script type="text/javascript">
                $(function () {
                   // $(".coll_body").eq(0).show();
                    $(".Collapsing").click(function () {
                        $(this).toggleClass("current").siblings('.Collapsing').removeClass("current");//ÇÐ»»Í¼±ê
                        $(this).next(".coll_body").slideToggle(500).siblings(".coll_body").slideUp(500);
                    });
                });
            </script>
            </div>
        <div class="pred_right">
            <ul>

                @foreach (var item in Model.Products)
                {

                   
                    <li><a><img   alt="@item.Title" title="@item.Title" src="@Url.ProductImageContent(item.ImageThumbUrl)"  class="img2" /></a></li>

                }

                
            </ul>
        </div>
    </div>
</div>
